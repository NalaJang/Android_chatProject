<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFFFF"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">


            <TextView
                android:id="@+id/result_addressList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기본배송지"
                />

            <TextView
                android:id="@+id/nickName_addressList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/result_addressList"
                android:textStyle="bold"
                android:textSize="17dp"
                android:text="배송지이름"
                />

            <TextView
                android:id="@+id/userName_addressList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nickName_addressList"
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="주문자이름"
                />

            <TextView
                android:id="@+id/line_addressList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="15dp"
                android:layout_toRightOf="@id/userName_addressList"
                android:layout_below="@+id/nickName_addressList"
                android:text=" | "
                />

            <TextView
                android:id="@+id/userPhone_addressList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/line_addressList"
                android:layout_below="@+id/nickName_addressList"
                android:textSize="16dp"
                android:text="휴대폰번호"
                />

            <TextView
                android:id="@+id/userAddress1_addressList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userName_addressList"
                android:textSize="16dp"
                android:text="주소"
                />

            <TextView
                android:id="@+id/userAddress2_addressList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userAddress1_addressList"
                android:textSize="16dp"
                android:text="나머지 주소"
                />

            <TextView
                android:id="@+id/num_addressList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/edit_addressList"
                android:visibility="gone"
                />

            <Button
                android:id="@+id/edit_addressList"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:background="@color/button"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:text="수정"
                />

            <Button
                android:id="@+id/delete_addressList"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/userAddress2_addressList"
                android:text="삭제"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>