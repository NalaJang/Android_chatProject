<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical"
    android:background="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <TextView
            android:id="@+id/indate_qnaCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="16dp"
            android:text="시간"
            />

        <TextView
            android:id="@+id/title_qnaCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/indate_qnaCheck"
            android:textStyle="bold"
            android:textSize="17dp"
            android:text="제목"
            />

        <TextView
            android:id="@+id/num__qnaCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/result_qnaCheck"
            android:layout_below="@+id/result_qnaCheck"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/result_qnaCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentEnd="true"
            android:textSize="17dp"
            android:text="답변현황"
            />
    </RelativeLayout>
</LinearLayout>