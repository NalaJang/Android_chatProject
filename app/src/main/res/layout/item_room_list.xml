<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp">

    <Button
        android:id="@+id/delete_roomList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나가기"
        />

    <RelativeLayout
        android:id="@+id/layout_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginStart="10dp">


        <ImageView
            android:id="@+id/user_img_item"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_baseline_person_24"
            />

        <TextView
            android:id="@+id/room_name_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/user_img_item"
            android:layout_alignTop="@id/user_img_item"
            android:textSize="15dp"
            android:text="room_name"
            />

        <TextView
            android:id="@+id/content_item"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/user_img_item"
            android:layout_alignBottom="@id/user_img_item"
            android:layout_centerHorizontal="true"
            android:maxWidth="200dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="20dp"
            android:text="채팅의 마지막 내용"
            />

        <TextView
            android:id="@+id/time_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_toRightOf="@id/room_name_item"
            android:text="00:00"
            />
    </RelativeLayout>
</LinearLayout>