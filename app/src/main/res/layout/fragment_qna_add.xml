<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".QnaCheckFragment">

    <Spinner
        android:id="@+id/spinner_qna"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/title_qna"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:scrollbars="vertical"
        android:hint="  제목"
        />

    <EditText
        android:id="@+id/content_qna"
        android:inputType="textMultiLine"
        android:lines="8"
        android:minLines="6"
        android:maxLines="10"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:scrollbars="vertical"
        android:hint="  문의 내용"
        />

    <EditText
        android:id="@+id/email_qna"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="  답변 받을 이메일 주소"
        />

    <CheckBox
        android:id="@+id/check_qna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="개인정보 수집 및 이용안내"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:id="@+id/cancel_qna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"
            />

        <Button
            android:id="@+id/insert_qna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="문의 접수"
            />
    </LinearLayout>
</LinearLayout>