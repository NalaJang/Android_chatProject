<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logo_img_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:src="@drawable/logosample"
        />

    <EditText
        android:id="@+id/userId_text_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="아이디"
        />

    <EditText
        android:id="@+id/userPw_text_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="비밀번호"
        />

    <Button
        android:id="@+id/button_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그인"/>

    <TextView
        android:id="@+id/search_id_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디/" />

    <TextView
        android:id="@+id/search_pw_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 찾기" />

    <TextView
        android:id="@+id/sign_up_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"/>
</LinearLayout>