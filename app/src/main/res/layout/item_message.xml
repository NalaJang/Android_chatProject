<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginStart="10dp">

        <!-- 상대방 -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_account_circle_24"
            />

        <TextView
            android:id="@+id/userId_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/userImage"
            android:layout_marginLeft="8dp"
            android:textSize="20dp"
            android:text="사용자 아이디"
            />

        <TextView
            android:id="@+id/message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userId_text"
            android:layout_toRightOf="@+id/userImage"
            android:layout_marginLeft="8dp"
            android:maxWidth="250dp"
            android:textSize="25dp"
            android:text="메시지"
            />

        <TextView
            android:id="@+id/message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/message_text"
            android:layout_alignBottom="@+id/message_text"
            android:layout_marginLeft="8dp"
            android:text="시간표시"
            />

        <ImageView
            android:id="@+id/message_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"/>


        <!-- 나 -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/myImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_baseline_account_circle_24"
            />

        <TextView
            android:id="@+id/myMessage_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/myImage"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:maxWidth="250dp"
            android:textSize="25dp"
            android:text="메시지"
            />

        <TextView
            android:id="@+id/myMessage_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/myMessage_text"
            android:layout_alignBottom="@+id/myMessage_text"
            android:layout_marginRight="8dp"
            android:text="시간표시"
            />

        <ImageView
            android:id="@+id/myMessage_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"/>
    </RelativeLayout>
</LinearLayout>